<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="400.0"
	xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="jbui.controller.MainController">
	<top>
		<MenuBar>
			<menus>
				<Menu mnemonicParsing="false" text="File">
					<items>
						<MenuItem mnemonicParsing="false"
							onAction="#onMaudePathsBtnClick" text="Set Maude paths..." />
						<MenuItem mnemonicParsing="false"
							onAction="#onExitBtnClick" text="Exit" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Launch">
					<items>
						<MenuItem mnemonicParsing="false"
							onAction="#onNewAttackMenuClick" text="New attack..." />
					</items>
				</Menu>
				<Menu disable="true" mnemonicParsing="false" text="Edit">
					<items>
						<MenuItem mnemonicParsing="false" text="Delete" />
					</items>
				</Menu>
				<Menu disable="true" mnemonicParsing="false" text="Help">
					<items>
						<MenuItem mnemonicParsing="false" text="About" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
	<center>
		<VBox xmlns="http://javafx.com/javafx/8.0.171"
			xmlns:fx="http://javafx.com/fxml/1">
			<children>
				<ButtonBar style="-fx-background-color: gray;">
					<buttons>
						<Button mnemonicParsing="false" text="Button">
							<font>
								<Font size="14.0" />
							</font>
						</Button>
					</buttons>
				</ButtonBar>
				<ScrollPane fitToHeight="true" fitToWidth="true"
					prefHeight="350.0" VBox.vgrow="ALWAYS">
					<content>
						<HBox alignment="TOP_CENTER">
							<children>
								<StackPane maxHeight="40.0" maxWidth="40.0">
									<children>
										<Pane fx:id="mCanvasPane">
											<children>
												<Canvas fx:id="mDrawingCanvas" height="40.0"
													width="40.0" />
											</children>
										</Pane>
										<GridPane fx:id="mNodesGridPane" hgap="40.0"
											vgap="40.0">
											<columnConstraints>
												<ColumnConstraints hgrow="SOMETIMES" />
											</columnConstraints>
											<rowConstraints>
												<RowConstraints vgrow="SOMETIMES" />
											</rowConstraints>
										</GridPane>
									</children>
								</StackPane>
							</children>
						</HBox>
					</content>
				</ScrollPane>
			</children>
		</VBox>
	</center>
</BorderPane>
